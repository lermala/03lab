<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label text="Для изменения/удаления выделите строку и нажмите на кнопку" />
      <ListView fx:id="listView" prefHeight="200.0" prefWidth="400.0" GridPane.rowIndex="1" />
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.rowIndex="4">
        <buttons>
            <Button mnemonicParsing="false" onAction="#showDialogAdd" text="Добавить" />
          <Button mnemonicParsing="false" onAction="#onClickChange" text="Изменить" />
            <Button mnemonicParsing="false" onAction="#onClickRemove" text="Удалить" />
            <Button mnemonicParsing="false" onAction="#onClickRequest" text="Запрос" />
        </buttons>
      </ButtonBar>
   </children>
</GridPane>
